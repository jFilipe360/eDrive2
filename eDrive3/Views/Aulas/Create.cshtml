@model eDrive3.Models.Aula

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Aula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Aulas" asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LessonDate" class="control-label"></label>
                <input asp-for="LessonDate" type="date" class="form-control" />
                <span asp-validation-for="LessonDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" type="number" class="form-control" min="1" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<eDrive3.Models.Aula.TipoAula>()" class="form-control"></select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <select asp-for="Numero" id="numero-select" class="form-control">
                    <!-- sempre 1‑32, JS esconde 29‑32 se for Teórica -->
                    @for (var i = 1; i <= 32; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstrutorID" class="control-label"></label>
                <select asp-for="InstrutorID" asp-items="ViewBag.InstructorList" class="form-control"></select>
                <span asp-validation-for="InstrutorID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // referencia aos select
        const tipoSel   = document.querySelector('[asp-for="Tipo"]')
                          || document.getElementById('Tipo');
        const numeroSel = document.getElementById('numero-select');

        // esconde 29‑32 quando for Teórica (enum valor 0)
        function updateNumeroOptions() {
            const isTeorica = parseInt(tipoSel.value) === 0;   // 0 = Teórica
            for (const opt of numeroSel.options) {
                const val = parseInt(opt.value);
                opt.style.display = (isTeorica && val > 28) ? 'none' : '';
            }
            // se tinha seleccionado >28 e mudou para Teórica, volta a 1
            if (isTeorica && parseInt(numeroSel.value) > 28) {
                numeroSel.value = 1;
            }
        }

        tipoSel.addEventListener('change', updateNumeroOptions);
        updateNumeroOptions(); // aplica logo ao carregar a página
    </script>
}
